{
  "name": "zenscript",
  "displayName": "ZenScript",
  "description": "For Modpack makers.",
  "repository": "https://github.com/Yesterday17/ZenScript",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "yesterday17",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:zenscript",
    "onCommand:zenscript.command.historyentry"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "zenscript.command.historyentry",
        "title": "%zenscript.command.historyentry.title%",
        "description": "%zenscript.command.historyentry.desc%",
        "when": "editorTextFocus && editorLangId == zenscript"
      }
    ],
    "keybindings": [
      {
        "command": "zenscript.command.historyentry",
        "key": "alt+H",
        "mac": "alt+H",
        "when": "editorTextFocus && editorLangId == zenscript"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zenscript-explorer",
          "title": "ZenScript Explorer",
          "icon": "assets/book.svg"
        }
      ]
    },
    "views": {
      "zenscript-explorer": [
        {
          "id": "history-entries",
          "name": "History Entries"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "ZenScript",
      "properties": {
        "zenscript.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "%zenscript.maxNumberOfProblems.desc%"
        },
        "zenscript.maxHistoryEntries": {
          "scope": "resource",
          "type": "number",
          "default": 20,
          "description": "%zenscript.maxHistoryEntries.desc%"
        },
        "zenscript.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "%zenscript.trace.server.desc%"
        }
      }
    },
    "languages": [
      {
        "id": "zenscript",
        "aliases": [
          "ZenScript",
          "zenscript"
        ],
        "extensions": [
          ".zs"
        ],
        "configuration": "./language/language-configuration.json"
      },
      {
        "id": "json",
        "extensions": [
          ".zsrc"
        ]
      }
    ],
    "grammars": [
      {
        "language": "zenscript",
        "scopeName": "source.zenscript",
        "path": "./language/syntaxes/zenscript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "zenscript",
        "path": "./language/snippets/global.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && yarn run update-vscode && cd .. && yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd ./client && yarn && cd  ../server && yarn && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.18",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-filter": "^5.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^5.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "vsce": "^1.54.0",
    "vscode-nls-dev": "^3.2.3"
  },
  "dependencies": {
    "vscode-nls": "^4.0.0"
  }
}
